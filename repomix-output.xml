end

function BenchmarkConfig(;
	example_name = "lv_periodic",
	noise_level = 1e-3,
	noise_type = "additive",
	data_size = 201,
	methods = ["GPR", "BSpline5", "TVDiff", "LOESS", "AAA_lowpres", "AAA"],
	derivative_orders = 4,
	output_dir = "./results",
	experiment_name = "benchmark_" * Dates.format(now(), "yyyymmdd_HHMMSS"),
	random_seed = 42,
